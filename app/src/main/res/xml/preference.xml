<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:icon="@mipmap/ic_action_badge"
        android:key="pref_show_favorites"
        android:title="@string/pref_title_favorites"
        android:summary="@string/pref_summary_favorites"
        android:defaultValue="false" />

    <PreferenceCategory
        android:title="@string/chorus">

        <ListPreference
            android:key="pref_chorus_font"
            android:title="@string/pref_font"
            android:dialogTitle="@string/pref_title_chorus_size"
            android:entries="@array/pref_font_size_entries"
            android:entryValues="@array/pref_font_size_values"
            android:defaultValue="@string/pref_default_font_size" />

        <ListPreference
            android:key="pref_chorus_font_size"
            android:title="@string/pref_font_size"
            android:dialogTitle="@string/pref_title_chorus_size"
            android:entries="@array/pref_font_size_entries"
            android:entryValues="@array/pref_font_size_values"
            android:defaultValue="@string/pref_default_font_size" />

        <ListPreference
            android:key="pref_chorus_font_color"
            android:title="@string/pref_font_color"
            android:dialogTitle="@string/pref_title_chorus_size"
            android:entries="@array/pref_font_size_entries"
            android:entryValues="@array/pref_font_size_values"
            android:defaultValue="@string/pref_default_font_size" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/stanza">

        <ListPreference
            android:key="pref_stanza_font"
            android:title="@string/pref_font"
            android:dialogTitle="@string/pref_title_chorus_size"
            android:entries="@array/pref_font_size_entries"
            android:entryValues="@array/pref_font_size_values"
            android:defaultValue="@string/pref_default_font_size" />

        <ListPreference
            android:key="pref_stanza_font_size"
            android:title="@string/pref_font_size"
            android:dialogTitle="@string/pref_title_chorus_size"
            android:entries="@array/pref_font_size_entries"
            android:entryValues="@array/pref_font_size_values"
            android:defaultValue="@string/pref_default_font_size" />

        <ListPreference
            android:key="pref_stanza_font_color"
            android:title="@string/pref_font_color"
            android:dialogTitle="@string/pref_title_chorus_size"
            android:entries="@array/pref_font_size_entries"
            android:entryValues="@array/pref_font_size_values"
            android:defaultValue="@string/pref_default_font_size" />
    </PreferenceCategory>


</PreferenceScreen>