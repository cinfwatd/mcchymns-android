<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitrient.mcchymns.FavoritesActivityFragment">

    <com.bitrient.mcchymns.view.EmptiableRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/empty_favorites"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="16dp" >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:gravity="center"
            android:background="@color/gransboro">

            <ImageView
                android:id="@+id/empty_favorites_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_hymn_gray"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/empty_favorites_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/gray"
                android:text="@string/empty_favorites_title" />

            <TextView
                android:id="@+id/empty_favorites_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_favorites_message"
                android:textColor="@color/darkgray" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
