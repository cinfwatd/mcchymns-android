<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <GridLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="5"
        android:layout_marginTop="@dimen/normal"
        android:layout_marginBottom="@dimen/tiny">

        <EditText
            android:id="@+id/selected_hymn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:focusable="false"
            android:cursorVisible="false"
            android:inputType="none"
            android:paddingLeft="23dp"
            android:layout_columnSpan="3"
            android:drawableEnd="@mipmap/ic_action_clear"
            android:drawableRight="@mipmap/ic_action_clear"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:background="@drawable/textfield_search_selected"
            />

        <Button android:text="@string/one"
            android:id="@+id/btn_one"
            android:textAppearance="?android:attr/textAppearanceLarge"
            style="?android:attr/borderlessButtonStyle"/>
        <Button android:text="@string/two"
            android:id="@+id/btn_two"
            android:textAppearance="?android:attr/textAppearanceLarge"
            style="?android:attr/borderlessButtonStyle"/>
        <Button android:text="@string/three"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/btn_three"
            style="?android:attr/borderlessButtonStyle"/>
        <Button android:text="@string/four"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/btn_four"
            style="?android:attr/borderlessButtonStyle"/>
        <Button android:text="@string/five"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/btn_five"
            style="?android:attr/borderlessButtonStyle"/>
        <Button android:text="@string/six"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/btn_six"
            style="?android:attr/borderlessButtonStyle"/>
        <Button android:text="@string/seven"
            android:id="@+id/btn_seven"
            android:textAppearance="?android:attr/textAppearanceLarge"
            style="?android:attr/borderlessButtonStyle"/>
        <Button android:text="@string/eight"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/btn_eight"
            style="?android:attr/borderlessButtonStyle"/>
        <Button android:text="@string/nine"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/btn_nine"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/btn_zero"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/zero" android:layout_column="1" style="?android:attr/borderlessButtonStyle"/>
    </GridLayout>
</LinearLayout>