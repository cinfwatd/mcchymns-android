<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cv"
    android:padding="@dimen/medium_padding" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/hymn_row_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="30dp"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginStart="@dimen/small_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <View android:id="@+id/hymn_line_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/hymn_row_number"
            android:layout_toEndOf="@+id/hymn_row_number"
            android:background="@android:drawable/dialog_frame" />

        <TextView
            android:id="@+id/hymn_row_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hymn_line_divider"
            android:layout_toEndOf="@+id/hymn_line_divider"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"/>

    </RelativeLayout>

    <View
        android:id="@+id/selected_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/selected_overlay"
        android:visibility="invisible" />
</android.support.v7.widget.CardView>
