<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
    </style>

    <style name="AlertDialogTheme" parent="android:Theme.Dialog">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@color/dimgray</item>
    </style>

    <style name="windowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="NoWindowBackground" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
</resources>
